{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Wermz Enhanced News",
  "description": "This extension shows topics and articles related to the news article being viewed",
  "version": "1.0",
  
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Wermz Enhanced News",
	"default_popup": "wermz.html"
  },
 
  "background": {
	"page": "background.html",	
	"persistent":false
  },
  
  "permissions": [
    "tabs",
	"storage",
	"https://*.wermz.com/",
	"http://*.wermz.com/"
  ]
}
