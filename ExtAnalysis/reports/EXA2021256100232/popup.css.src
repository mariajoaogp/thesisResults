body {
  width: 730px;
  overflow-x: hidden;
  font-size: 14px;
  font-family: "Open Sans";
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  background: #eee;
  color: #666;
  /*border: solid 1px black;*/
}

.sans {
  font-family: Open Sans;
}

.dosis {
  font-family: Dosis;
}

.hidden {
  display: none !important;
}

a, a:hover {
  color: #4285F4;
  text-decoration: underline;
}

.error-msgs {
  height: 0.8em;
}

.pull-right {
  float: right;
}

.btn {
  display: inline-block;
  font: normal 16px "Open Sans";
  color: #fff;
  background: #4285F4;
  text-decoration: none !important;
  padding: 0px 24px;
  line-height: 43px;
  border-radius: 20px;
  cursor: pointer;
}

.btn-green {
  background: #58AC3D;
}

.btn-white {
  background: #fff;
  color: #4285F4;
  border: solid 2px #4285F4;
}

.btn-blue:hover {
  background: #649AF3;
  color: #fff;
}

.btn-green:hover {
  background: #58AC3D;
  color: #fff;
}

.btn-white:hover {
  background: #4285F4;
  color: #fff;
}


.impct-blue {
  background-color: #4285F4;
}

.impct-gray {
  background-color: #666;
}

.relcan-warn {
  margin-bottom: 16px;
  padding: 8px 14px;
  border-radius: 8px;
  color: white;
}

.relcan-warn-btn {
  display: inline-block;
  font-weight: bold;
  margin-right: 15px;
  margin-top: 10px;
}

.relcan-warn-btn a {
  color: #fff;
}

.alert {
  padding: 10px 20px;
  border: 1px solid transparent;
  border-radius: 5px;
  border-top-right-radius: 0;
}

.alert:after {
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
  border-color: rgba(136, 183, 213, 0);
  border-width: 8px;
  right: -8px;
  top: 0px;
  margin-top: -8px;
  transform: rotate(45deg);
}

.alert-danger:after {
  border-left-color: #DB4437;
}

.alert-info:after {
  border-left-color: #4285F4;
}

.alert-danger {
  /*color: #a94442;*/
  /*background-color: #f2dede;*/
  /*border-color: #ebccd1;*/
  color: #fff;
  background-color: #DB4437;
}

.alert-success {
  color: #3c763d;
  background-color: #dff0d8;
  border-color: #d6e9c6;
}

.alert-warning {
  color: #8a6d3b;
  background-color: #fcf8e3;
  border-color: #faebcc;
}

.alert-info {
  color: #fff;
  background-color: #4285F4;
}

.clear {
  clear: both;
}

.text-right {
  text-align: right;
}


/**
 * Containers
 */

.header {
  height: 110px;
  overflow: hidden;
}

.container {
  position: relative;
  width: 664px;
  margin: 0 auto;
  border-sizing: border-box;
}

.banner > div {
  display: none;
  width: 728px;
  height: 90px;
  background: #fff;
}

.body {
  width: 687px;
  margin: 0 auto;
  box-sizing: border-box;
  padding-bottom: 20px;
}

.settings {
  margin-bottom: 32px;
}

.controls {
  position: relative;
  min-height: 48px;
}


/**
 * Header
 */

#main-logo {
  position: absolute;
  left: -6px;
  top: 19px;
  width: 196px;
  height: 27px;
  background: url(/img/lrt-pt-logo.svg) no-repeat;
}

#lrt-logo-bg {
  position: absolute;
  right: -35px;
  top: 0;
  width: 421px;
  height: 117px;
  background: url(/img/link-research-tool-logo-bg.png) no-repeat;
}

#lrt-logo {
  position: absolute;
  top: 10px;
  left: 106px;
  display: inline-block;
  width: 218px;
  height: 46px;
  background: url(/img/link-research-tool-logo.svg) no-repeat;
  background-size: contain;
}

#btn-options {
  position: absolute;
  right: 0;
  top: 22px;
  width: 20px;
  height: 20px;
  opacity: 0.8;
  background: url(/img/icon-cog.svg) no-repeat;
